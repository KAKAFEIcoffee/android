<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/imageView_user_d_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@mipmap/id_picture"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_user_d_t1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="bottom"
            android:text=" 昵称"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_user_d_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView_user_d_t2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text=" 语音"
            android:gravity="bottom"
            android:textSize="18dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_user_d_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="1s"
                android:textSize="18dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/button_user_d_transcribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录音"
                android:textSize="18dp"/>

        </TableRow>


    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline5" >

        <TextView
            android:id="@+id/textView_user_d_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView"
            android:textSize="18dp"
            android:gravity="center"
            android:background="#D3D3D3"/>

    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline6" >

        <TextView
            android:id="@+id/textView_user_d_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView"
            android:textSize="18dp"
            android:gravity="center"
            android:background="#D3D3D3"/>

    </TableRow>

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />
</android.support.constraint.ConstraintLayout>